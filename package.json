{
	"name": "react-ssr-advanced-seed",
	"version": "1.0.7",
	"description": "React SSR Advanced Seed (nestJS + React SSR + React Native + Docker)",
	"author": "Vipin Tanna",
	"license": "MIT",
	"scripts": {
		"clean:install": "rm -rf node_modules && lerna clean --yes && npm install",
		"install": "npx lerna bootstrap --hoist --ignore __tests__ --ignore-scripts -- --production --no-optional && npm run install:mobile",
		"install:mobile": "cd src/client/mobile && npm install",
		"precommit": "lint-staged",
		"build": "npm run build:backend && npm run build:frontend && npm run docker-compose",
		"e2e": "npm run build && npm run test:e2e",
		"deploy:frontend": "npm run build:frontend && npx release-it -n --no-npm.publish && npm run docker:frontend:prod:publish",
		"deploy": "npm run build:frontend && npm run build:backend && npx release-it -n --no-npm.publish && npm run docker:frontend:prod:publish",
		"build:frontend": "cross-env NODE_ENV=production WS_PROTOCOL=ws:// WS_URL=localhost:8090 API_PROTOCOL=http:// node scripts/build.js",
		"build:frontend:ci": "cross-env NODE_ENV=production WS_PROTOCOL=wss:// WS_URL=react-ssr-nest-api.herokuapp.com API_PROTOCOL=https:// node scripts/build.js",
		"build:backend:ci": "webpack --env.FRONT_END_HOST=https://confident-mestorf-ab8ce9.netlify.app --env.GITHUB_CALLBACK_URL=https://confident-mestorf-ab8ce9.netlify.app/api/auth/callback --env.NODE_ENV=production --env.watchFiles=false --config scripts/api-webpack.config.js",
		"build:backend": "webpack --env.FRONT_END_HOST=http://localhost:8080 --env.GITHUB_CALLBACK_URL=http://localhost:8080/api/auth/callback --env.NODE_ENV=production --env.watchFiles=false --config scripts/api-webpack.config.js",
		"start:frontend": "cross-env NODE_ENV=development node scripts/start.js",
		"start:backend": "cd src/server && cross-env FRONT_END_HOST=http://localhost:8500 GITHUB_CALLBACK_URL=http://localhost:3000/auth/callback  NODE_ENV=development --env.watchFiles=true npx ts-node -r tsconfig-paths/register main",
		"start:docker": "npm run build && npm run docker:frontend:prod",
		"start": "npm run start:frontend & npm run start:backend",
		"start:mobile": "cd src/client/mobile && npm start",
		"mobile:ios": "cd src/client/mobile && react-native run-ios",
		"mobile:android": "cd src/client/mobile && react-native run-android",
		"server": "npx pm2 start --name=node-api dist/server.js",
		"docker-compose": "docker-compose build && docker-compose up -d",
		"docker:frontend:prod": "node scripts/docker-build.js frontend",
		"docker:backend:prod": "node scripts/docker-build.js backend",
		"docker:frontend:prod:publish": "node scripts/docker-build.js frontend --publish",
		"test": "npm run test:frontend:web && npm run test:frontend:mobile && npm run test:backend",
		"test:backend": "cross-env CI=true API_DB_USERNAME=postgres API_DB_PASSWORD=password API_DB_NAME=postgres node scripts/test.js --env=jsdom --config=jest.backend.config.js",
		"test:e2e": "node scripts/test.js --env=jsdom --config=jest.e2e.config.js --runInBand --coverage",
		"test:watch": "cross-env API_DB_USERNAME=postgres API_DB_PASSWORD=password API_DB_NAME=postgres node scripts/test.js --env=jsdom --config=jest.backend.config.js",
		"test:frontend:web": "cross-env CI=true node scripts/test.js --env=jsdom --config=jest.frontend.config.js",
		"test:frontend:mobile": "cd src/client/mobile && npm test",
		"test:frontend:watch": "node scripts/test.js --env=jsdom --config=jest.frontend.config.js",
		"test:update": "yarn test --updateSnapshot",
		"lint": "eslint ./src/client",
		"omega:update-package:minor": "node scripts/omega/packager.js minor",
		"omega:update-package:major": "node scripts/omega/packager.js major",
		"omega:update-package:patch": "node scripts/omega/packager.js patch",
		"omega:update-package:alpha": "node scripts/omega/packager.js alpha",
		"generate": "npx plop",
		"generate:container": "npx plop container",
		"generate:webComponent": "npx plop webComponent",
		"generate:sharedComponent": "npx plop sharedComponent",
		"generate:mobileComponent": "npx plop mobileComponent",
		"generate:server:module": "npx plop serverModule && npm run generate:server:modelHelpers",
		"generate:server:modelHelpers": "npx plop serverModelHelpers",
		"generate:graphqltypes": "cd src/server/app && npx ts-node generate-typings.ts",
		"generate:docs": "npx typedoc --out docs/ src/ --mode file --module commonjs --target es6",
		"generate:types": "tsc index.tsx --declaration --emitDeclarationOnly --jsx react --lib es2015 --esModuleInterop",
		"generate:defintions": "npx dts-generator --name node-advanced-api --project ./ --out node-advanced-api.d.ts",
		"generate-all": "npm run generate:defintions && npm run generate:docs",
		"webpack": "webpack --env.NODE_ENV=development --env.watchFiles=true --config scripts/api-webpack.config.js",
		"storybook": "start-storybook -p 6006",
		"now-build": "npm run build:frontend",
		"build-storybook": "build-storybook"
	},
	"lint-staged": {
		"*.{js,css}": [
			"prettier --write"
		],
		"*.js": [
			"eslint src --fix"
		]
	},
	"moduleRoots": [
		"src/client",
		"src/server",
		"src",
		"node_modules"
	],
